\name{smartRbindMat}
\alias{smartRbindMat}
%- Also NEED an '\alias' for EACH other topic documented here.
\title{Row bind matrices whose column names may not be the same}
% \description{
% }
\usage{
smartRbindMat(..., distinguish = FALSE, filler = NA)
}
%- maybe also 'usage' for other objects documented here.
\arguments{
  \item{\dots}{matrices to rbind, separated by commas, or a character
    vector containing the names of matrix objects}
  \item{distinguish}{if \code{TRUE}, then missing rownames
    are assigned a name consisting of the object name as a prefix,
    followed by the row number, separated by a ":".  Otherwise,
    the missing rownames are left unchanged.}
  \item{filler}{The character to insert into the final matrix for those
    empty elements which occur when not all the matrices have the same
    column names.}
}
% \details{
%}
\value{
  Produces a matrix with a union of the column names.  Empty elements
  resulting from different column names are set to NA.
}
%\references{}
\author{Landon Sego}
% \note{ ~~further notes~~ 

%  ~Make other sections like Warning with \section{Warning }{....} ~
% }
\seealso{\code{\link{rbind}}}
\examples{
x <- matrix(rnorm(6), ncol = 2, dimnames = list(letters[1:3],letters[4:5]))
y <- matrix(rnorm(6), ncol = 3, dimnames = list(letters[7:8],letters[4:6]))
z <- matrix(rnorm(2), nrow = 1, dimnames = list("c",letters[3:4]))

x
y
z

smartRbindMat(x,y,z)
smartRbindMat(y,z,x)
smartRbindMat(c("y","x","z"), filler = -20)


x1 <- matrix(rnorm(6), ncol = 2, dimnames = list(NULL,letters[4:5]))
y1 <- matrix(rnorm(6), ncol = 3, dimnames = list(NULL,letters[4:6]))
z1 <- matrix(rnorm(2), nrow = 1, dimnames = list(NULL,letters[3:4]))

x1
y1
z1

smartRbindMat(x1,y1,z1)
smartRbindMat(paste(c("z","x", "y"), 1, sep = ""), distinguish = TRUE)

smartRbindMat(x1,y,z1,z)
smartRbindMat(x1,y,z1,z, distinguish = TRUE)
}
% Add one or more standard keywords, see file 'KEYWORDS' in the
% R documentation directory.
\keyword{misc}
